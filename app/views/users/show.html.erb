<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, { size: 75 }) %>
        <%= @user.name %>
      </h1>
    </section>
    <div class="container">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6 col-md-6 col-lg-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title pull-left">Add Catch</h3>
                <div class="btn-group pull-right">
                  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#id_modal_add_catch">
                    <span class="glyphicon glyphicon-plus"></span>
                  </button>
                </div>
                <div class="clearfix"></div>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-sm-6 col-lg-6 col-md-6 col-sm-offet-3 col-md-offset-3 col-lg-offset-3">
                    <p align="center">
                      <%= image_tag("add-catch.jpg", alt: "add catch",
                                size: "160", class: "img-buffer img-rounded img-responsive") %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </aside>
</div>

<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1 class="panel-title text-center">My Catch</h1>
        <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      <div class="row">
        <% if @user.listings.any? %>
          <% @listings.each do |listing| %>
            <div class="col-sm-6 col-md-6 col-lg-4">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title pull-left"><%= listing_title_for(listing.name) %></h3>
                  <button type="button" class="btn btn-primary btn-sm pull-right" data-toggle="modal" data-target="#id_modal_catch_1">
                    <span class="glyphicon glyphicon-wrench"></span>
                  </button>
                  <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-sm-6 col-lg-6 col-md-6">
                      <p align="center">
                        <%= listing_image_for(listing.name, { size: 75 }) %>
                      </p>
                    </div>
                    <div class="col-sm-6 col-lg-6 col-md-6">
                      <p id="id_quanity_1" align="center">Quantity: <%= listing.quantity %> lb</p>
                      <p id="id_ask_price_1" align="center">Ask Price: $<%= listing.price %>/lb</p>
                      <p id="id_date_caught_1" align="center">Date Caught: <%= listing.date_caught %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
